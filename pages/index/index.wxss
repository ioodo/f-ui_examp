/**index.wxss**/
page {
  /* height: 100%; */
  background: #fcf8f5;
}

.plain.f-button-fill.type-pink {
  color: #ec9a99;
  background: #fae5e4;
  border: 1px solid #f5bfbe;
}

.search-icon {
  display: grid;
  place-items: center;
}
.search-icon-bg {
  position: absolute;
  background: #ffffff;
  opacity: 0.3;
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.navbar-extra-wrapper {
  display: flex;
  padding: 24rpx 0rpx;
}
.navbar-extra-wrapper__left {
}
.navbar-extra-wrapper__right {
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
  margin-left: auto;
  color: #ededed;
  display: flex;
  align-items: center;
}
.navbar-extra-wrapper__left .extra-title {
  color: #ededed;
  font-size: 24rpx;
}
.navbar-extra-wrapper__left .extra-subtitle {
  color: #ffffff;
  font-size: 44rpx;
  margin-top: 16rpx;
  display: flex;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.list-item {
  height: 100px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}